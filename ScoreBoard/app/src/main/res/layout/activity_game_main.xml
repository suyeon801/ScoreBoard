<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <View
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"/>
        <View
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"/>
        <View
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <TextView
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Score"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FFA7A7"
            android:gravity="center"
            android:background="@drawable/scoreboard"/>
        <TextView
            android:paddingRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Board"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#B2CCFF"
            android:gravity="center"
            android:background="@drawable/scoreboard_right"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- GameName -->
    <TextView
        android:id="@+id/detail_game_name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baseball"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>

    <!-- GameIcon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ball"
            android:gravity="center"/>

        <ImageView
            android:layout_marginTop="125dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/click"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <!-- GameRank -->
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/brown_rec">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="20dp"
            android:id="@+id/game_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>